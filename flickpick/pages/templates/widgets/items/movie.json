{% load page_tags %}
{
    "id": "{{ item.id }}",
    "title": "{{ item.title }}",
    {% if item.poster_url %}
        {% include 'widgets/image.json' with url=item.poster_url %},
    {% endif %}
    "year": "{{ item.year }}",
    "released": "{{ item.released }}",
    "rated": "{{ item.rated }}",
    "path": "{{ item.get_api_url }}",
    "profile_url": "{{ item.get_absolute_url }}",
    "plot":"{{ item.plot|escapejs }}",
    "directors":
      [
        {% for director in item.director_set.all %}
         { "name": "{{ director.person.name }}",
           "path": "{{ director.person.get_absolute_url }}"
         }{%  loopcomma %}
        {%  endfor %}
        ],
    "actors":
      [
        {% for actor in item.actor_set.all %}
         { "name": "{{ actor.person.name }}",
           "path": "{{ actor.person.get_absolute_url }}"
         }{%  loopcomma %}
        {%  endfor %}
        ],
    "writers":
      [
        {% for writer in item.writer_set.all %}
         { "name": "{{ writer.person.name }}",
           "path": "{{ writer.person.get_absolute_url }}"
         }{%  loopcomma %}
        {%  endfor %}
        ],
   "genres":
      [
        {% for genre in item.genre_set.all %}
         { "name": "{{ genre.name }}",
           "path": "{% url 'genre' genre.id %}"
         }{%  loopcomma %}
        {%  endfor %}
        ]
}